<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- include head partial -->
    <% include ./partials/_head %>
  </head>
  <body>
  <header>
    <!-- include header partial -->
    <% include ./partials/_header %>
  </header>
  <main class="content">
    <section class="side-nav">
      <nav>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link active" href="#">All</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">HTML</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">CSS</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Javascript</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Ruby</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">SQL</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Bootstrap</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">jQuery</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">React</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Angular</a>
          </li>
        </ul>
      </nav>
    </section>
    <section class="card-columns">
      <!-- Content tiles -->
      <% for (let post of posts) { %>
      <article class="card" data-post-id="<%= post.id%>">
        <section class="card-body">
          <h5 class="card-title"><%= post.title%></h5>
          <p class="card-text text-muted"><%= post.description%></p>
          <% if (locals.user) { %>
          <button><i class="fa fa-heart" aria-hidden="true"></i></button>
          <% } %>
        </section>
      </article>
      <% } %>
    </section>
  </main>

  <footer class="footer mt-auto py-3">
    <!-- include footer -->
    <% include ./partials/_footer %>
  </footer>
  </body>
</html>
