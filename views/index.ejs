<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- include head partial -->
    <% include ./partials/_head %>
  </head>
  <body>
  <header>
    <!-- include header partial -->
    <% include ./partials/_header %>
  </header>
  <main class="content">
    <section class="side-nav">
      <nav>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link active" href="#" id="all">All</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="html">HTML</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="css">CSS</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="js">Javascript</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="ruby">Ruby</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="sql">SQL</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="bootstrap">Bootstrap</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="jquery">jQuery</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="react">React</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="angular">Angular</a>
          </li>
        </ul>
      </nav>
    </section>
    <section class="card-columns">
      <!-- Content tiles -->
      <% for (let post of posts) { %>
      <article class="card" data-post-id="<%= post.id%>" data-tag="">
        <section class="card-body">
          <a href="<%= post.url %>" target="_blank"><h5 class="card-title"><%= post.title %></h5></a>
          <p class="card-text text-muted"><%= post.description %></p>
          <% if (locals.user) { %>
          <button class="like"><i class="fa fa-heart" aria-hidden="true"></i></button>
          <% } %>
        </section>
      </article>
      <% } %>
      <article class="card" data-tag="bootstrap">
        <section class="card-body">
          <a href="https://hackerthemes.com/bootstrap-cheatsheet/" target="_blank"><h5 class="card-title">Bootstrap 4 Cheatsheet</h5></a>
          <p class="card-text text-muted">Bootstrap 4 classes</p>
          <% if (locals.user) { %>
          <button class="like"><i class="fa fa-heart" aria-hidden="true"></i></button>
          <% } %>
        </section>
      </article>
    </section>
  </main>

  <footer class="footer mt-auto py-3">
    <!-- include footer -->
    <% include ./partials/_footer %>
  </footer>
  </body>
</html>
