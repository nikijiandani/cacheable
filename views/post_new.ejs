<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- include head partial -->
    <% include ./partials/_head %>
  </head>
  <body>
  <header>
    <!-- include header partial -->
    <% include ./partials/_header %>
  </header>
  <section class="box">

    <h3>Cache a new resource</h3>
    <form id="new-form" action="/posts" method="POST">

      <!-- Title -->
      <div class="form-group">
        <label for="title">Title:</label>
        <input class="form-control" type="text" name="title" required>
      </div>
      
      <!-- Resource URL -->
      <div class="form-group">
        <label for="url">Enter a URL:</label>
        <input class="form-control" type="text" name="url" placeholder="http://" required>
      </div>
      
      <!-- Description -->
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-control" type="text" name="description"></textarea>
      </div>

      <!-- Tag -->
      <div class="form-group">
        <label for="tag">Tags:</label>
        <textarea class="form-control" type="text" name="tag"></textarea>
      </div>

      <button type="submit" class="btn btn-primary inline">Submit</button>

    </form>

  </section>

  <footer class="footer mt-auto py-3">
    <!-- include footer -->
    <% include ./partials/_footer %>
  </footer>
  </body>
</html>
